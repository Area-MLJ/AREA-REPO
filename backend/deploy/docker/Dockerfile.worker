FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm ci --only=production

# Copy source code
COPY . .

# Build TypeScript (si n√©cessaire)
RUN npm run build || true

# Expose port (optionnel, pour health checks)
EXPOSE 3001

# Run worker
CMD ["npm", "run", "worker"]

