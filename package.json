{
  "name": "area-mvp",
  "version": "1.0.0",
  "private": true,
  "description": "AREA MVP - Backend + Frontend Web",
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "cd frontend/web && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd frontend/web && npm run build",
    "build": "npm run build:backend && npm run build:web",
    "start": "concurrently \"npm run start:backend\" \"npm run start:web\"",
    "start:backend": "cd backend && npm start",
    "start:web": "cd frontend/web && npm run preview",
    "docker:dev": "./docker-start.sh",
    "docker:up": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:clean": "docker-compose -f docker-compose.dev.yml down -v --rmi all"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
